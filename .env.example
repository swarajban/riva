# Environment (development or production)
# NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@host:5432/riva

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_USER_REDIRECT_URI=https://app.riva.systems/auth/user/callback
GOOGLE_ASSISTANT_REDIRECT_URI=https://app.riva.systems/auth/assistant/callback

# Google Pub/Sub (for Gmail push notifications)
GOOGLE_PUBSUB_TOPIC=projects/your-project/topics/gmail-push

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=YourBotUsername

# Anthropic
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxx

# App
NEXT_PUBLIC_APP_URL=https://app.riva.systems

# Session
SESSION_SECRET=generate-a-random-32-char-string

# Development (set to true for 1-minute email delay instead of 5-15 min)
# FAST_EMAIL_DELAY=true
